{
  "extends": [
    "react-app",
    "react-app/jest",
    "plugin:tailwindcss/recommended",
    "prettier"
  ],
  "settings": {
    "tailwindcss": {
      "callees": ["twMerge", "createTheme"],
      "classRegex": "^(class(Name)|theme)?$"
    }
  },

  "rules": {
    "tailwindcss/no-custom-classname": "off",
    "no-var": "error",
    "no-empty-pattern": "off"
  }
}
